{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["modules", "./src/modules"],
        ["images", "./src/images"],
        ["scss", "./src/scss"]
      ]
    }
  },
  "rules": {
    "new-cap": 0,
    "no-unused-vars": 0,
    "no-param-reassign": 0,

    "no-console": 0,
    "operator-linebreak": ["error", "after"]
  }
}
